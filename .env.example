# External PostgreSQL Configuration
# For localhost PostgreSQL on Windows, use: host.docker.internal
# For remote PostgreSQL, use the server hostname or IP address
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=odoo_user
DB_PASSWORD=your_secure_password_here

# Odoo Admin Password (for master password)
# This is the master password used for database operations
ADMIN_PASSWORD=your_admin_password_here

# Performance Tuning (adjust based on server resources)
# Workers: (CPU cores * 2) + 1 is a good starting point
WORKERS=2
LIMIT_MEMORY_SOFT=2147483648
LIMIT_MEMORY_HARD=2684354560
LIMIT_REQUEST=8192
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200
LIMIT_TIME_REAL_CRON=1800
MAX_CRON_THREADS=2
